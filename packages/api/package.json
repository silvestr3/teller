		"db:migrate": "bun --env-file .env --bun drizzle-kit migrate",
		"lint": "biome lint --write",
		"format": "biome format --write",
		"check": "biome check --write"
	},
	"dependencies": {
		"@elysiajs/cors": "^1.4.0",
		"@elysiajs/openapi": "^1.4.11",
		"better-auth": "^1.3.26",
