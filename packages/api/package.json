		"drizzle-typebox": "^0.3.3",
		"elysia": "1.4.9",
		"pg": "^8.16.3",
		"postgres": "^3.4.7",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@types/pg": "^8.15.5",
		"bun-types": "latest",
		"drizzle-kit": "^0.31.5",
		"tsx": "^4.20.6"
	},
	"module": "src/index.js",
	"overrides": {
		"@sinclair/typebox": "0.32.4"
	}
